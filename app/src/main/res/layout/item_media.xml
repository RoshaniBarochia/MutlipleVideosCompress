<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_46sdp"
    android:layout_height="@dimen/_46sdp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginRight="@dimen/_1sdp"
    android:layout_marginLeft="@dimen/_1sdp"
    android:background="@drawable/chat_image_video"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_thumb">
    <ImageView
        android:id="@+id/ivMediaImageBorder"
        android:layout_width="@dimen/_46sdp"
        android:layout_height="@dimen/_46sdp"
        android:src="@drawable/bg_border_square_media"
        android:visibility="visible"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivMediaImage"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_gravity="center_horizontal"
        app:riv_corner_radius="@dimen/_5sdp"
        android:scaleType="centerCrop"
        android:src="@color/media_default_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txtDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tv_12_black"
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp"
        tools:text="00:00"
        android:paddingTop="@dimen/_2sdp"
        android:paddingStart="@dimen/_4sdp"
        android:paddingEnd="@dimen/_2sdp"
        android:background="@drawable/bg_txt_duration_media"
        app:layout_constraintEnd_toEndOf="@+id/ivMediaImage"
        app:layout_constraintBottom_toBottomOf="@+id/ivMediaImage"/>


</androidx.constraintlayout.widget.ConstraintLayout>