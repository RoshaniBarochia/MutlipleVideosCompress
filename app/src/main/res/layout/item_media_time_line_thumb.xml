<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_46sdp"
    android:layout_height="@dimen/_60sdp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_thumb">
    <ImageView
        android:id="@+id/ivMediaImageBorder"
        android:layout_width="@dimen/_46sdp"
        android:layout_height="@dimen/_46sdp"
        android:src="@drawable/bg_border_square_media_white"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--        <com.makeramen.roundedimageview.RoundedImageView-->
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivMediaImage"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_gravity="center_horizontal"
        app:riv_corner_radius="@dimen/_5sdp"
        android:scaleType="centerCrop"
        android:src="@color/media_default_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txtDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tv_12_black"
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp"
        tools:text="00:00"
        android:paddingTop="@dimen/_2sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingRight="@dimen/_2sdp"
        android:background="@drawable/bg_txt_duration_media"
        app:layout_constraintEnd_toEndOf="@+id/ivMediaImage"
        app:layout_constraintBottom_toBottomOf="@+id/ivMediaImage"/>

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tv_12_black"
        android:textColor="@color/black"
        android:text="00:00"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/ivMediaImage"
        app:layout_constraintEnd_toEndOf="@id/ivMediaImage"
        app:layout_constraintTop_toBottomOf="@id/ivMediaImage"
        android:layout_marginTop="@dimen/_5sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>